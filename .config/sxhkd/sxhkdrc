super + e
    emoji_picker&

super + c
    $TERMINAL -t Calculator -e python -q&

super + r
    $TERMINAL -t Scratchpad -e notepad&

super + shift + r
    feh --no-fehbg --bg-fill "$HOME/Pictures/Wallpaper/wallpaper"&

super + m
    mount_drive&

super + ctrl + space
    BLOCK_BUTTON=1 $HOME/.local/share/scripts/dwmblocks/keyboard.sh

super + ctrl + shift + space
    BLOCK_BUTTON=3 $HOME/.local/share/scripts/dwmblocks/keyboard.sh

XF86AudioMute
    pavolume toggle&

XF86AudioRaiseVolume
    pavolume +5%&

XF86AudioLowerVolume
    pavolume -5%&

XF86AudioPrev
    playerctl -s previous&

XF86AudioPlay
    playerctl -s play-pause&

XF86AudioNext
    playerctl -s next&
